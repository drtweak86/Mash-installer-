---
extends: default

rules:
  braces:
    max-spaces-inside: 1
  brackets:
    max-spaces-inside: 1
  colons:
    max-spaces-after: 1
  commas:
    max-spaces-after: 1
  comments:
    level: warning
  comments-indentation:
    level: warning
  document-start: disable
  indentation:
    spaces: 2
  line-length: disable
  truthy:
    level: warning
